<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
  "http://www.springframework.org/dtd/spring-beans.dtd">
<!-- Application scope beans for search builder -->
<beans>
  <bean id="contentRoot" class="java.lang.String">
    <constructor-arg>
      <value>E:\darwin\converted</value>
    </constructor-arg>
  </bean>

  <bean id="itemDirectory" class="java.lang.String">
    <constructor-arg>
      <value>E:\workspace\DarwinServlet\src\webapp\database</value>
    </constructor-arg>
  </bean>
  <bean id="indexDirectory" class="java.lang.String">
    <constructor-arg>
      <value>e:\lucendo\darwin\index</value>
    </constructor-arg>
  </bean>
  <!--  whether to ignore file date staleness in updating free text index -->
  <bean id="forceReindex" class="java.lang.Boolean">
     <constructor-arg value="true"></constructor-arg>
  </bean>

  <bean id="updateItemIndex" class="java.lang.Boolean">
     <constructor-arg value="false"></constructor-arg>
  </bean>

</beans>