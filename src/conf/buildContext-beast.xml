<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
  "http://www.springframework.org/dtd/spring-beans.dtd">
<!-- Application scope beans for search builder -->
<beans>
  <bean id="contentRoot" class="java.lang.String">
    <constructor-arg>
      <value>/ext/cankerwort/homes/darwin/webapps/ROOT/converted</value>
    </constructor-arg>
  </bean>

  <bean id="itemDirectory" class="java.lang.String">
    <constructor-arg>
      <value>/ext/cankerwort/homes/darwin/webapps/ROOT/database</value>
    </constructor-arg>
  </bean>
  <bean id="indexDirectory" class="java.lang.String">
    <constructor-arg>
      <value>/home/darwin/temp-lucene-index</value>
    </constructor-arg>
  </bean>
  <!--  whether to ignore file date staleness in updating free text index -->
  <bean id="forceReindex" class="java.lang.Boolean">
     <constructor-arg value="true"></constructor-arg>
  </bean>

  <bean id="updateItemIndex" class="java.lang.Boolean">
     <constructor-arg value="true"></constructor-arg>
  </bean>

</beans>